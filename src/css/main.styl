@import 'themes/common.variables'
// app global css

body {
    font-size: 87.5%;
    color: $thick-text;
    font-weight: 600;
    font-family: 'Lato', sans-serif, Arial, Helvetica;
    background: $bg-landing
}

body,
caption,
th,
td,
input,
textarea,
select,
option,
legend,
fieldset,
h1,
h2,
h3,
h4,
h5,
h6 {
    font-size-adjust: 0.5;
    font-weight: 400;
}

#scanpicktable .q-table-bottom{
    display:none
}

.q-field {
    margin-bottom: 15px;
}

#page {
    font-size: 1em;
    /* equivalent to 14px */
    line-height: 1.25;
    /* equivalent to 20px */
}

.xsmall {
    font-size: 0.875em;
    /* equivalent to 12px */
    line-height: 1.1em;
}

.xxsmall {
    font-size: 0.6em;
    /* equivalent to 10px */
    line-height: 1em;
}

a {
    font-weight: 700;
    color: $thick-text;
    text-decoration: none;
}

a:visited {
    color: $thick-text;
    font-weight: 700;
    text-decoration: underline;
}

#main-container {
    width: 95%;
    max-width: 960px;
    margin: 0 auto;
    padding-top: 0;
    border-radius: 0 0 1em 1em;
    box-shadow: 0 0 20px rgba(50, 50, 50, 0.5);
    overflow: hidden;
}

@media (min-width: 43.75em) {
    #main-container {
        max-width: 960px;
    }
}

@media (min-width: 56.25em) {
    #main-container {
        max-width: 1050px;
    }
}

@media (min-width: 81.25em) {
    #main-container {
        max-width: 1200px;
    }
}

@media (min-width: 43.75em) {
    #page {
        font-size: 1em;
        /* equivalent to 14px */
        line-height: 1.6;
        /* equivalent to 22px */
    }
}

h1 {
    font-size: 2em;
    /* 2x body copy size = 28px */
    line-height: 1.25;
    /* 45px / 36px */
}

@media (min-width: 43.75em) {
    h1 {
        font-size: 2.85em;
        /* 2.85x body copy size = 40px */
        line-height: 1.125;
    }
}

@media (min-width: 56.25em) {
    h1 {
        font-size: 3.5em;
        /* 3x body copy size = 48px */
        line-height: 1.05;
        /* keep to a multiple of the 20px line height and something more appropriate for display headings */
    }
}

h2 {
    font-size: 1.9em;
    /* 1.9x body copy size = 26px */
    line-height: 1.15384615;
    /* 30px / 26px */
}

@media (min-width: 43.75em) {
    h2 {
        font-size: 2.6em;
        /* 2x body copy size = 32px */
        line-height: 1.25;
    }
}

@media (min-width: 56.25em) {
    h2 {
        font-size: 2.25em;
        /* 2.25x body copy size = 36px */
        line-height: 1.25;
    }
}

h3 {
    font-size: 1.6em;
    /* 1.6x body copy size = 22px */
    line-height: 1.5;
    /* 25px / 22px */
}

@media (min-width: 43.75em) {
    h3 {
        font-size: 1.7em;
        /* 1.7x body copy size = 24px */
        line-height: 1.2;
    }
}

@media (min-width: 56.25em) {
    h3 {
        font-size: 2em;
        /* 2x body copy size = 28px */
        line-height: 1.25;
    }
}

h4 {
    font-size: 1.3em;
    /* 1.3x body copy size = 18px */
    line-height: 1.11111111;
}

@media (min-width: 43.75em) {
    h4 {
        line-height: 1.6;
        /* (22px / 18px */
    }
}

blockquote {
    font-size: 1.3em;
    /* 20px / 16px */
    line-height: 1.25;
    /* 25px / 20px */
}

@media (min-width: 43.75em) {
    blockquote {
        font-size: 1.7em;
        /* 24px / 16px = */
        line-height: 1;
        /* 35px / 24px */
    }
}

